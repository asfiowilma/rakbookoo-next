generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Author {
  id   Int    @id @default(autoincrement())
  name String
  Book Book[] @relation("AuthorToBook")
}

model Book {
  id         String   @id @unique @db.Uuid
  isbn       String?
  title      String
  coverImage String?
  blurb      String?
  rating     Int
  shelfId    Int
  shelf      Shelf    @relation(fields: [shelfId], references: [id])
  notes      Note[]
  authors    Author[] @relation("AuthorToBook")
  tags       Tag[]    @relation("BookToTag")
  ownerId    String   @db.Uuid
  owner      User     @relation(fields: [ownerId], references: [uid])
}

model Note {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  content   String
  bookId    String   @db.Uuid
  book      Book     @relation(fields: [bookId], references: [id])
}

model Shelf {
  id      Int    @id @default(autoincrement())
  name    String
  userUid String @db.Uuid
  books   Book[]
  owner   User   @relation(fields: [userUid], references: [uid])
}

model Tag {
  id   Int    @id @default(autoincrement())
  name String
  book Book[] @relation("BookToTag")
}

model User {
  uid        String  @id @unique @db.Uuid
  name       String?
  avatar_url String?
  shelves    Shelf[]
  books      Book[]
}
