generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Author {
  id   Int    @id @default(autoincrement())
  name String
  Book Book[]
}

model Book {
  id         Int      @id @default(autoincrement())
  isbn       String?
  title      String
  coverImage String?
  blurb      String?
  rating     Int
  shelfId    Int
  Shelf      Shelf    @relation(fields: [shelfId], references: [id])
  Note       Note[]
  Author     Author[]
  Tag        Tag[]
}

model Note {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  content   String
  bookId    Int
  Book      Book     @relation(fields: [bookId], references: [id])
}

model Shelf {
  id      Int    @id @default(autoincrement())
  name    String
  userUid String
  Book    Book[]
  User    User   @relation(fields: [userUid], references: [uid])
}

model Tag {
  id   Int    @id @default(autoincrement())
  name String
  Book Book[]
}

model User {
  uid   String  @id @unique
  name  String?
  Shelf Shelf[]
}
